<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_room_parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="4dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/item_room_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/item_room_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/item_room_thumbnail"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:gravity="bottom"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/item_room_message"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/item_room_thumbnail"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:maxLines="1"
        android:gravity="bottom"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/item_room_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/item_room_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:textSize="12dp"/>
</RelativeLayout>