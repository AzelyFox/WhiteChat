<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_social_parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="4dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/item_social_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/item_social_nickname"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/item_social_thumbnail"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:gravity="bottom"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/item_social_sub"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_toEndOf="@id/item_social_thumbnail"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/item_social_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>
</RelativeLayout>